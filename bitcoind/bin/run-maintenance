#!/bin/bash

set -eu
set -o pipefail
#set -x # for temporary debugging

# set full path of the bitcoid root directory
pushd $(dirname $0) > /dev/null
cd ..
ROOT_DIR=$(pwd -P)
popd > /dev/null

# stop 
${ROOT_DIR}/bin/stop-node

# rotate logs
${ROOT_DIR}/bin/rotate-logs

# backup
${ROOT_DIR}/bin/backup-data

# start
${ROOT_DIR}/bin/run-node full
